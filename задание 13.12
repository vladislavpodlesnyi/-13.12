#include <iostream>     // Підключаємо бібліотеку введення-виведення
#include <Windows.h>    // Підключаємо бібліотку за допоиогою якої буде працюувати українська мова 

using namespace std;

int function(int n)     // Створюємо функцію int function()
{
    int j;

    if (n < 0)                                 // Робимо перевірку на натуральність числа
    {
        cout << "Це не натуральне число!"; №
        exit;
    }
    else
    {
        int index = n == 1 ? 1 : 2;    // За допомогою тернарного оператора присвоюємо значення змінній index

        for (int i = 2; i * i <= n; i++)
        {
            if (n % i != 0)      // Робимо перевірку на парність числа
            {
                continue;
            }

            j = n / i;                // Ділимо число n на 2
                                       
            index += 2 - (i == j);    // Тут зроблена перевірка, якщо i == j, то це дорівнює 1 (керуючись булевою логікою)
        }                            // Наприклад, n = 4, i = 2 і при діленні j = 2, якщо б не було цієї перевірки, то програма     
                                    // порахувала кількість дільників у розімрі 4, і завдяки цій перевірці програма працює коректно (працює аналогічно з усіма іншими випадками)
        cout << "Кількість дільників числа =  " << index << endl;

        return index;
    }
}

int main()
{
    SetConsoleOutputCP(1251);    // Встановлюємо кодування символів, яке відповідає за кирилицю  
    SetConsoleCP(1251);

    int n;

    cout << "Введіть число n: ";   
    cin >> n;                      // Вводимо число n

    function(n);      // Передаємо значення у функцію         
}
